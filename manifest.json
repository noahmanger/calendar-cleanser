{
  "manifest_version": 2,

  "name": "Calendar Cleanser",
  "description": "An extension for cleaning up calendar clutter",
  "author": "Noah Manger",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png",
      "128": "images/icon128.png"
    },
    "default_title": "Calendar Cleanser",
    "default_popup": "popup.html"
  },
  "permissions": [
    "https://calendar.google.com/*"
  ]
}
