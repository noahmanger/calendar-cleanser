{
  "manifest_version": 2,

  "name": "Calendar Helper",
  "description": "An extension for hiding calendar clutter",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "Calendar helper",
    "default_popup": "popup.html"
  },
  "permissions": [
    "https://*/*",
    "http://*/*",    
    "activeTab",
    "tabs"
  ]
}
